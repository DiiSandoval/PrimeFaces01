<?xml version="1.0"?>

<faces-config
    version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		
		<locale-config>
        	<default-locale>es</default-locale>
        </locale-config>
        <resource-bundle>
        	<base-name>Language</base-name>
            <var>msg</var>
        </resource-bundle>		
	</application>
				<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>showMyGroups</from-outcome>
			<to-view-id>/views/myGroups.xhtml</to-view-id>
		</navigation-case>
			<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>showMyGroups</from-outcome>
			<to-view-id>/views/myGroups.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>showSummary</from-outcome>
			<to-view-id>/views/summary.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		
	<lifecycle>
		<phase-listener>com.liferay.faces.util.lifecycle.DebugPhaseListener</phase-listener>
	</lifecycle>		
</faces-config>